<section>
    
  <div class="container">
    <div class="row mt-4">




      <a href="/admin/add-files" class="btn btn-success ml-auto">Add Files</a>
    </div>
    <table id="table_id" class="table mt-5">
      <thead>
        <tr>
          <th>No.</th>
          <th>File Name</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each image}}
        <tr>
          <td></td>
          <td>{{this.filename}}</td>
          <td>
            <a href="/admin/edit-files/{{this._id}}" class="btn btn-primary">Open</a>
            <a href="/admin/delete-files/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you sure to delete ?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#table_id').DataTable();
  });
</script>


<style>
  body {
    counter-reset: Count-Value;
  }

  table {
    border-collapse: separate;
  }

  tr td:first-child:before {
    counter-increment: Count-Value;
    content: counter(Count-Value);
  }
</style>